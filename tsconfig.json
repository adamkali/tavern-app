{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "customMatcher": "\\.module\\.css$",
                    "camelCase": true
                },
            }
        ]
    },
    "include": [
        "./helpers/**/*",
        "./providers/**/*",
        "./screens/**/*",
        "./components/**/*"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "tsconfig.json",
        "tsconfig.base.json"
    ]
}
